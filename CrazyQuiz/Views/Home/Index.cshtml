@model IEnumerable<CrazyQuiz.Models.QuizResult>
@{
    ViewData["Title"] = "Home page";
}

<html>
<head>
    <style>
        body {
            background-image: url('/img/background-home.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container-main {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 20px;
        }

        #featured-quiz {
            flex: 1;
        }

        .container-quiz {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .quiz-preview img {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

        .quiz-actions {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .quiz-actions .btn-start-quiz {
                display: inline-block;
                padding: 10px 20px;
                background-color: #28a745;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
            }

        .container-leaderboard {
            max-width: 400px;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
        }

        h2 {
            text-align: center;
        }

        /* Stilizare pentru tabel */
        #leaderboard-table {
            width: 100%;
            margin-top: 20px;
        }

            #leaderboard-table th,
            #leaderboard-table td {
                padding: 10px;
                text-align: center;
            }

            #leaderboard-table th {
                background-color: #007bff; /* Culoare pentru header */
                color: #fff; /* Culoare text header */
            }

            #leaderboard-table tbody tr:nth-child(even) {
                background-color: #f2f2f2; /* Culoare pentru rânduri pare */
            }
    </style>
</head>
<body>
    <div class="container-main">
        <section id="featured-quiz">
            <div class="container-quiz">
                <div class="quiz-preview">
                    <img src="img/quiz.png" alt="Quiz preview" />
                </div>
                <div class="quiz-actions">
                    <a asp-controller="Quizzes" asp-action="StartQuiz" class="btn btn-start-quiz">Start Quiz</a>
                </div>
            </div>
        </section>

        <!-- Tabelul leaderboard-ului -->
        <div class="container-leaderboard">
            <h2>Leaderboard</h2>
            <table id="leaderboard-table">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>User</th>
                        <th>Score</th>
                        <th>Completion Time</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        var rank = 1;
                        foreach (var result in Model)
                        {
                            <tr>
                                <td>@rank</td>
                                <td>@result.User.UserName</td>
                                <td>@result.Score</td>
                                <td>@result.CompletionTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            </tr>
                            rank++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
