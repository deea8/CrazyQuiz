@model CrazyQuiz.Models.Answer

<h1>Answer Details</h1>

<div>
    <h4>Answer Text:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCorrect)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCorrect)
        </dd>
        <dt class="col-sm-2">
            Question
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Text)
        </dd>
    </dl>
