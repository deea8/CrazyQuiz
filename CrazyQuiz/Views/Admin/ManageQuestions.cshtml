@model IEnumerable<CrazyQuiz.Models.Question>


@{
    ViewData["Title"] = "Manage Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Questions</h1>

<p>
    <a asp-action="CreateQuestion" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Question Text</th>
            <th>Quiz Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Text</td>
                <td>@question.Quiz.Title</td>
                <td>
                    <a asp-action="DetailsQuestion" asp-route-id="@question.QuestionId">Details</a> |
                    <a asp-action="EditQuestion" asp-route-id="@question.QuestionId">Edit</a> |
                    <a asp-action="DeleteQuestion" asp-route-id="@question.QuestionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
