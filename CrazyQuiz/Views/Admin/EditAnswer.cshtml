@model CrazyQuiz.Models.Answer

@{
    ViewBag.Title = "Edit Quiz";
}

<h2>@ViewBag.Title</h2>

<form asp-action="EditAnswer" method="post">
    <input type="hidden" asp-for="AnswerId" />
    <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsCorrect" class="form-check-input" />
            <label class="form-check-label" asp-for="IsCorrect">Is Correct</label>
        </div>
        <span asp-validation-for="IsCorrect" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuestionId" class="control-label"></label>
        <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionList"></select>
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
