@model CrazyQuiz.Models.Answer
@{
    ViewBag.Title = "Delete Question";
}
<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer Text:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCorrect)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCorrect)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question.Text)
        </dd>
    </dl>
    <form asp-action="DeleteAnswer">
        <input type="hidden" asp-for="AnswerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ManageAnswers">Back to List</a>
    </form>
</div>
