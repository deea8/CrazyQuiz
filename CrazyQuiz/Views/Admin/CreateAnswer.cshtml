@model CrazyQuiz.Models.Answer

<h1>Create Answer</h1>

<form asp-action="CreateAnswer">
    <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsCorrect" class="form-check-input" />
            <label class="form-check-label" asp-for="IsCorrect">Is Correct</label>
        </div>
        <span asp-validation-for="IsCorrect" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Question" class="control-label"></label>
        <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionList"></select>
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
